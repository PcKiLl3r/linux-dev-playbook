---
extends: default
rules:
  line-length:
    max: 160
  comments:
    require-starting-space: false
    min-spaces-from-content: 1
  comments-indentation: disable
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  document-start:
    present: true
  empty-lines:
    max: 1
ignore: |
  vault/*
  .ansible/**
